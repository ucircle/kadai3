<%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary" do %>
<i class="fa-solid fa-user-gear"></i>
<% end %>

<h2>New Book</h2>



<%= form_with model: new_book do |f| %>

  <h6>Title</h6>
  <%= f.text_field :title %>

  <h6>Opinion</h6>
  <%= f.text_area :body %>

  <button type="submit" class="btn btn-success">Create Book</button>


<% end %>
