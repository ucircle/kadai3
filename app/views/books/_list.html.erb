
<div class="container">
  <div class="row">
    <div class="col-md-3">
    <h1>User Info</h1>
    <%= image_tag user.get_profile_image(100,100) %>

  <table class="table">
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  </div>
  </div>
