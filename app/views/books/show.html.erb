


<div>
  <h6>User Info</h6>
  <h3><%= book.user_id.name %></h3>
  <%= image_tag book.user_id.get_profile_image(100,100) %>
  <% end %>
</div>


<h2>New Book</h2>

<% if new_book.errors.any? %>
  <%= new_book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% new_book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
  <% end %>
  </ul>
<% end %>

<%= form_with model: new_book do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

  
<% end %>

  

<h1>Books</h1>
 <table>
  <thead>
    <tr>
      <th>Title</th>
      <th>opinion</th>
    </tr>
    
  </thead>
  
<tbody>
  
<% @books.each do |book| %>

   <tr>
     <p>投稿ユーザー画像：<%= image_tag user.get_profile_image(100,100) %></p>
     <td><%= @book.title %></td>
     <td><%= @book.body %></td>
   </tr>
<% end %>
  
  
</tbody>
  
</table>
