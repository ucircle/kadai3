<div>
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row">
    <div class="col-4">
<%= render 'books/list', new_book: @new_book, user: @user %>
    </div>


<% if @new_book.errors.any? %>
  <%= @new_book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @new_book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
  <% end %>
  </ul>
<% end %>


  <div class="col-8">
    <h1>Books</h1>
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>

    <tbody>
    <% @books.each do |book| %>
      <tr>

      <td><%= image_tag book.user.get_profile_image(100,100) %></td>

      <td><%= link_to book.title, "/books/#{book.id}" %></td>

      <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>




    </table>
  </div>
  </div>
</div>