<h2>User info</h2>

<% if @user.errors.any? %>
  <%= @user.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
  <% end %>
  </ul>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-md-12">
    <table>
      
   
     <%= form_with model: @user do |f| %>
      <td><label for="inputName">Name</label>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></td>
      <td><label for="inputImage">Image</label>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  </td>
      <td><label for="inputintroduction">introduction</label>
      <%= f.text_field :introduction, autofocus: true, id:"inputintroduction"%></td>
  
      <td><%= f.submit "Update User" %></td>
     <% end %>

    </table>
    </div>
  </div>
</div>