<div>
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row">
    <div class="col-4">
<%= render 'books/list', books: @books, new_book: @new_book, user: @user %>
    </div>


<div class="col-8">
<h1>Books</h1>
 <table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>opinion</th>

    </tr>

  </thead>

  <tbody>

  <% @user.books.each do |book| %>

   <tr>
     <td><%= image_tag book.user.get_profile_image(100,100) %></td>
     <td><%= link_to book.title, "/books/#{book.id}" %></td>
     <td><%= book.body %></td>

   </tr>
  <% end %>


  </tbody>

  </table>
  </div>
  </div>
</div>