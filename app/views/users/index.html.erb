<div class="container">
  <div class="row">
    <div class="col-4">
     <%= render 'books/list', new_book: @new_book, user: @user %>
    </div>



  <div class="col-8">
    <h1>Users</h1>
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
        </tr>
      </thead>
    <tbody>

    <% @users.each do |user| %>

    <tr>

      <td><%= image_tag user.get_profile_image(100,100) %></td>

      <td><%= user.name %></td>

      <td><%= link_to "show", user_path(user.id) %></td>
    </tr>

    <% end %>
    </tbody>

    </table>
  </div>
  </div>
</div>